<h1>Sign up</h1>

<%= form_for(@user) do |f| %>


 <!-- A failed user signup (see users.controller) merely redisplays -->
 <!-- the signup page;  the next line provides user feedback by     -->
 <!-- displaying error messages generated by the failed signup:     -->

	<!-- next line updated for "object":  seee listing 10.5    -->
	<%= render 'shared/error_messages', :object => f.object %>  


   <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
   </div>

   <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
   </div>

   <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
   </div>

   <div class="field">
      <%= f.label :password_confirmation, "Confirmation" %><br />
      <%= f.password_field :password_confirmation %>
   </div>

   <div class="actions">
	   <%= f.submit "Sign up" %>
   </div>

<% end %>